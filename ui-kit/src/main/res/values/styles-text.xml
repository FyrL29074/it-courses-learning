<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Title">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0015</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineHeight" tools:targetApi="p">18sp</item>
    </style>

    <style name="Description">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.7</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="android:letterSpacing">0.0033</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LinkText">
        <item name="fontFamily">@font/roboto_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:lineHeight" tools:targetApi="p">15sp</item>
        <item name="android:letterSpacing">0.0033</item>
    </style>

    <style name="Caption">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">14sp</item>
        <item name="android:letterSpacing">0.0033</item>
    </style>
</resources>